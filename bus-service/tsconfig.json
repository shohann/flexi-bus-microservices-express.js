{
  "compilerOptions": {
    "target": "ES2020",                 // Target ECMAScript version
    "module": "commonjs",               // Node.js uses commonjs modules
    "strict": true,                     // Enable strict type-checking
    "esModuleInterop": true,            // Allow importing commonjs modules
    "skipLibCheck": true,               // Skip type checking for libraries
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                 // Output directory for compiled files
    "rootDir": "./src"                  // Directory for TypeScript source files
  },
  "include": ["src"],                   // Include all files in src
  "exclude": ["node_modules"]           // Exclude node_modules
}
